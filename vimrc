filetype on
filetype plugin on
filetype plugin indent on

syntax enable
set ttyfast
set nocp

set tabstop=2
set shiftwidth=2
set softtabstop=2
set smarttab
set expandtab
set autoindent
set smartindent
set cursorline
set nobackup
set nowritebackup
set nocompatible
set noswapfile
set backspace=indent,eol,start
set tw=100

set secure
set enc=utf-8
set fenc=utf-8
set termencoding=utf-8

let g:netrw_liststyle = 3
let g:netrw_banner = 0
